PORT=6501
MONGO_URI=mongodb://localhost:27017/myceli
NODE_ENV=development

# --- JWT Secrets ---
JWT_ACCESS_SECRET=replace-with-strong-random-string
JWT_REFRESH_SECRET=replace-with-strong-random-string
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# --- CORS ---
# Comma-separated list of allowed origins for CORS (prod + local)
# e.g. http://localhost:3000,https://myceli-app.vercel.app
CORS_ORIGIN=http://localhost:3000,https://myceli-app.vercel.app
FRONTEND_URL=http://localhost:3000

# --- OAuth: Google ---
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:6501/api/auth/google/callback

# --- OAuth: GitHub ---
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:6501/api/auth/github/callback

# --- Stripe Billing ---
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
STRIPE_PRICE_BASIC_MONTHLY=price_basic_placeholder
STRIPE_PRICE_PRO_MONTHLY=price_pro_placeholder
STRIPE_PRICE_BASIC_ANNUAL=price_basic_annual_placeholder
STRIPE_PRICE_PRO_ANNUAL=price_pro_annual_placeholder
STRIPE_TOPUP_SMALL=price_topup_small_placeholder   # ~$5 -> 400 credits
STRIPE_TOPUP_MEDIUM=price_topup_medium_placeholder # ~$10 -> 900 credits
STRIPE_TOPUP_LARGE=price_topup_large_placeholder   # ~$20 -> 2000 credits
